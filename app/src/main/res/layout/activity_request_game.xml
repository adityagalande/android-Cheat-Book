                    android:fontFamily="@font/sigmarone_regular"
                    android:gravity="center"
                    android:padding="4dp"
                    android:shadowColor="#67587686"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="5"
